generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  tweetId   Int
  userId    Int

  @@index([tweetId])
  @@index([userId])
}

model Tweet {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    Int

  @@index([userId])
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String?  @unique
  password  String
  createdAt DateTime @default(now())
}
